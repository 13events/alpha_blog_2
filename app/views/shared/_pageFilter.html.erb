<div class="container">
  <div class="row justify-content-end">
    <div class="col-2">
      <p><strong>Items Per Page</strong></p>
    </div>
  </div>
  <div class="row justify-content-end mr-4">
    <div class="col-2">
      <ul class="list-group list-group-horizontal">
        <% PAGE_SIZES.each do |size| %>
          <%= link_to size, url_for(per_page: size), class: "list-group-item" %>
        <% end %>
      </ul>
    </div>
  </div>
</div>