
<div class="container justify-content-center mt-3">

  <div class="row">
    <div class="col-10 mx-auto">
      <!-- Display User signup form -->
      <%= form_with(scope: :session, url: login_path, local: true, class: "card p-3 bg-dark shadow text-light") do |f| %>
        <div class="form-group card-body">
            <%= f.label :username, class: "card-title form-label h4" %>
            <%= f.text_field :username, class: "form-control col-10 shadow-lg", placeholder: "Enter a username" %>
        </div>

        <div class="form-group card-body">
          <%= f.label :password, class: "h4 card-title" %>
          <%= f.password_field :password, rows: 10, class: "form-control col-10 shadow-lg", placeholder: "Enter your password" %>
        </div>

        <div class="form-group card-body">
          <div class="row">
            <div class="col">
              <%= f.submit "Login", class: "btn btn-outline-light"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>