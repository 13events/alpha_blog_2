<h1 class="text-white text-center">Categories</h1>



<div class="container mt-4">
  <%= paginate @categories_list %>
  <div class="d-flex flex-column">
    <% @categories_list.each do |category| %>

      <!-- Row -->
      <div class="row mt-4">

        <!-- Column -->
        <div class="col-3 d-flex flex-column mx-auto">

          <!-- Card -->
          <div class="card">

            <!-- Card Body -->
            <div class="card-body">
              <h4 class="card-title text-center"><%= link_to category.name, category_path(category) %> </h4>
              <div class="container text-right">

                <% if logged_in? && (article.user == current_user || user_is_admin?)%>
                  <%= link_to 'Edit', edit_article_path(article), class: "text-white btn btn-info btn-sm", role: "button"%>
                  <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: "text-white btn btn-sm btn-danger", role: "button" %>
                <% end %>
              </div>
            </div>
            <!-- Card Body -->

          </div>
          <!-- Card -->

        </div>
        <!-- Column -->

      </div>
      <!-- Row -->

    <% end %>
  </div>
</div>
<!-- Container -->