
<div class="container justify-content-center mt-3">

  <div class="row">
    <div class="col-10 mx-auto">
      <!-- Display errors, if any -->
      <%= render 'shared/errorMessages', object: @user %>

      <!-- Display User signup form -->
      <%= form_with(model: @user, local: true, class: "card p-3 bg-dark shadow text-light") do |f| %>
        <div class="form-group card-body">
            <%= f.label :username, class: "card-title form-label h4" %>
            <%= f.text_field :username, class: "form-control col-10 shadow-lg", placeholder: "Enter a username" %>
        </div>

        <div class="form-group card-body">
          <%= f.label :email, class: "h4 card-title" %>
          <%= f.email_field :email, rows: 10, class: "form-control col-10 shadow-lg", placeholder: "Enter your email" %>
        </div>

        <div class="form-group card-body">
          <%= f.label :password, class: "h4 card-title" %>
          <%= f.password_field :password, rows: 10, class: "form-control col-10 shadow-lg", placeholder: "Enter your password" %>
        </div>

        <div class="form-group card-body">
          <div class="row">
            <div class="col">
              <%= f.submit "Sign up", class: "btn btn-outline-light"%>
              <%= link_to 'Cancel', root_path, class: "ml-3 btn btn-outline-info text-info" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>